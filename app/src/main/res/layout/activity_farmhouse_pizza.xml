<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2F2"
    android:orientation="vertical"
    tools:context=".FarmhousePizzaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="end">

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/pizza4" />


            <!--CARDVIEW WHITE PROPERTIES-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical">

                    <!--TITLE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farmhouse Pizza"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="$10.10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_17sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!--PROPERTIES-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/gray_stroke_line_bg"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="470 kcal"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/gray_stroke_line_bg"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="120 Gram"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/gray_stroke_line_bg">

                            <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:src="@drawable/starone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="3.9"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="Ingredient"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold" />

                    <!--INGREDIENTS-->

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_marginVertical="@dimen/_10sdp"
                                        android:background="@drawable/pizza_round_bg"
                                        android:elevation="@dimen/_5sdp"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="@dimen/_10sdp">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/pizza_round_bg">

                                            <ImageView
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:background="#F1EFEF"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/cheese" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_28sdp"
                                    android:layout_marginTop="@dimen/_85sdp"
                                    android:gravity="bottom"
                                    android:text="Cheese"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_70sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:src="@drawable/minusone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_marginVertical="@dimen/_10sdp"
                                        android:background="@drawable/pizza_round_bg"
                                        android:elevation="@dimen/_5sdp"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="@dimen/_10sdp">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#fffff1">

                                            <ImageView
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/onion" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_33sdp"
                                    android:layout_marginTop="@dimen/_85sdp"
                                    android:gravity="bottom"
                                    android:text="Onion"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_70sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:src="@drawable/minusone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_marginVertical="@dimen/_10sdp"
                                        android:background="@drawable/pizza_round_bg"
                                        android:elevation="@dimen/_5sdp"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="@dimen/_10sdp">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#b6fff4">

                                            <ImageView
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/capsicum" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_22sdp"
                                    android:layout_marginTop="@dimen/_85sdp"
                                    android:gravity="bottom"
                                    android:text="Capsicum"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_70sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:src="@drawable/minusone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_marginVertical="@dimen/_10sdp"
                                        android:background="@drawable/pizza_round_bg"
                                        android:elevation="@dimen/_5sdp"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="@dimen/_10sdp">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#ffc6e0">

                                            <ImageView
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/dough" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_33sdp"
                                    android:layout_marginTop="@dimen/_85sdp"
                                    android:gravity="bottom"
                                    android:text="Dough"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_70sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:src="@drawable/minusone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_marginVertical="@dimen/_10sdp"
                                        android:background="@drawable/pizza_round_bg"
                                        android:elevation="@dimen/_5sdp"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="@dimen/_10sdp">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#b8bcb0">

                                            <ImageView
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/tomato" />
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_33sdp"
                                    android:layout_marginTop="@dimen/_85sdp"
                                    android:gravity="bottom"
                                    android:text="Tomato"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_marginLeft="@dimen/_70sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:src="@drawable/minusone" />

                            </RelativeLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="bottom"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_35sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/orange">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:background="@drawable/gray_stroke_line_bg"
                                    android:paddingHorizontal="@dimen/_20sdp"
                                    android:paddingVertical="@dimen/_8sdp"
                                    android:text="$10.10"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:text="ADD TO CART"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/gray_stroke_line_bg"
                                app:cardCornerRadius="@dimen/_30sdp">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_7sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/bag" />
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>